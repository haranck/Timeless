<%- include("../../views/partials/user/header") %>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

    <style>
        .wishlist-img {
            max-width: 39%;
        }

        .product-info {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .product-info img {
            width: 80px;
            height: 80px;
            object-fit: cover;
        }

        .stock {
            display: inline-block;
            padding: 6px 12px;
            font-size: 14px;
            font-weight: bold;
            border-radius: 20px;
        }

        .in-stock {
            background: #d4edda;
            color: #155724;
        }

        .out-of-stock {
            background: #f8d7da;
            color: #721c24;
        }

        .btn {
            display: inline-block;
            font-size: 14px;
            padding: 8px 20px;
            color: #ffffff;
            text-transform: uppercase;
            font-weight: 600;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .add-to-cart {
            background: #111111;
        }

        .add-to-cart:hover {
            background: #333333;
        }

        .remove {
            background: #dc3545;
            margin-left: 5px;
        }

        .remove:hover {
            background: #c82333;
        }

        .add-to-cart.disabled {
            background: #6c757d;
            cursor: not-allowed;
        }

        a,
        a:visited,
        a:hover,
        a:active {
            color: black !important;
            /* Ensures the link is always black */
            text-decoration: none !important;
            /* Removes underline */
        }
    </style>

    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__text">
                        <h4>Wishlist</h4>
                        <div class="breadcrumb__links">
                            <a href="/">Home</a>
                            <span>Wishlist</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->

    <!-- Wishlist Section Begin -->
    <section class="shopping-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shopping__cart__table">
                        <table>
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Stock Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if(wishlist && wishlist.items && wishlist.items.length> 0){ %>
                                    <% wishlist.items.forEach((item)=>{ %>
                                        <tr>
                                            <td class="product-info">
                                                <a href="/productDetails?id=<%= item.productId._id %>">
                                                    <img src="/uploads/product-images/<%= item.productId.productImages[0] %> "
                                                        alt="<%= item.productId.name %>">
                                                    <span>
                                                        <%= item.productId.productName %>
                                                    </span>
                                                </a>
                                            </td>
                                            <td class="price">₹<%= item.productId.salePrice %>
                                            </td>
                                            <% if(item.productId.quantity> 0) { %>
                                                <td><span class="stock in-stock">In Stock  </span>
                                                    <p style="display: inline;font-size: 13px; color: #155724;"> /<%= item.productId.quantity %>left</p></td>
                                                <td class="actions">
                                                    <button class="btn add-to-cart"
                                                        onclick="addToCart('<%= item.productId._id %>')">Add to
                                                        Cart</button>
                                                    <button class="btn remove"
                                                        onclick="removeFromWishlist('<%= item.productId._id %>',event)">✕</button>
                                                </td>
                                                <% } else { %>
                                                    <td><span class="stock out-of-stock">Out of Stock</span>
                                                    <p style="display: inline;font-size: 13px; color: #721c24;"> /<%= item.productId.quantity %>left</p></td>
                                                    <td class="actions">
                                                        <button class="btn add-to-cart disabled" disabled>Add to
                                                            Cart</button>
                                                        <button class="btn remove"
                                                            onclick="removeFromWishlist('<%= item.productId._id %>',event)">✕</button>
                                                    </td>
                                                    <% } %>
                                        </tr>
                                        <% }) %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="4" class="text-center">No products in the wishlist</td>
                                                </tr>
                                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Wishlist Section End -->
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        async function addToCart(productId) {

            try {
                const response = await fetch('/addToCart', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },

                    body: JSON.stringify({
                        productId: productId,
                        quantity: 1
                    })
                });

                const data = await response.json();

                if (data.success) {

                    Toastify({
                        text: "Success\nProduct added to cart successfully",
                        duration: 2000,
                        close: true,
                        gravity: "top",
                        position: "right",
                        stopOnFocus: true,
                        style: {
                            background: "#ffffff",
                            color: "#28a745",
                            boxShadow: "0px 5px 15px rgba(0, 0, 0, 0.2)",
                            padding: "12px 20px",
                            borderRadius: "10px",
                            borderLeft: "5px solid #28a745",
                            fontSize: "14px",
                            fontWeight: "bold",
                            textAlign: "left",
                            animation: "fadeInUp 0.5s ease-in-out"
                        },
                        avatar: "https://cdn-icons-png.flaticon.com/512/845/845646.png",
                    }).showToast();

                } else {
                    throw new Error(data.message || 'Failed to add product to cart');
                }
            } catch (error) {
                console.error('Error:', error);

                Toastify({
                    text: "Error\n" + error || 'Failed to add product to cart',
                    duration: 2000,
                    close: true,
                    gravity: "top",
                    position: "right",
                    stopOnFocus: true,
                    style: {
                        background: "#ffffff",
                        color: "#dc3545",
                        boxShadow: "0px 5px 15px rgba(0, 0, 0, 0.2)",
                        padding: "12px 20px",
                        borderRadius: "10px",
                        borderLeft: "5px solid #dc3545",
                        fontSize: "14px",
                        fontWeight: "bold",
                        textAlign: "left",
                        animation: "fadeInUp 0.5s ease-in-out"
                    },
                    avatar: "https://cdn-icons-png.flaticon.com/512/190/190406.png",
                }).showToast();
            }
        }

        async function removeFromWishlist(productId, event) {
            try {
                if (!productId) {
                    throw new Error('Product ID is required');
                }
                Swal.fire({
                    title: 'Are you sure?',
                    text: "This item will be removed from your cart.",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, remove it!'
                }).then(async (result) => {
                    if (result.isConfirmed) {
                        const response = await fetch(`/wishlist/remove/${productId}`, {
                            method: 'DELETE',
                            headers: {
                                'Content-Type': 'application/json'
                            }
                        })
                        const data = await response.json();
                        if (data.success) {

                            event.target.closest('tr').remove()


                            const remainingItems = document.querySelectorAll('tbody tr').length;
                            if (remainingItems === 0) {
                                document.querySelector(".shopping__cart__table tbody").innerHTML = `
                                <tr>
                                    <td colspan="4" class="text-center">No products in the wishlist</td>
                                </tr>
                            `;
                            }
                            Swal.fire({
                                icon: 'success',
                                title: 'Removed!',
                                text: 'Your item has been removed.',
                                showConfirmButton: false,
                                timer: 1500
                            })

                        } else {
                            Swal.fire(
                                'Error!',
                                data.message,
                                'error'
                            )
                        }
                    }
                })
            } catch (error) {
                console.error('Error:', error);
                Swal.fire(
                    'Error!',
                    'Something went wrong. Please try again later.',
                    'error'
                )
            }
        }
    </script>

    <%- include("../../views/partials/user/footer") %>