<%- include("../../views/partials/user/header") %>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<div class="container mt-4"  style="margin-bottom: 220px;">
    <a href="/userProfile" style="font-size: 24px; color: black;">
        <i class="fa fa-arrow-left" id="back-button"></i>
      </a>
      
    <h2 class="mb-4">My Addresses</h2>

    <% if (userAddress && userAddress.length > 0) { %>
        <div class="row">
            <% userAddress.forEach((address, index) => { %>
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0"><%= address.addressType %> : Address</h5>
                        </div>
                        <div class="card-body">
                            <p><strong>Name:</strong> <%= address.name %></p>
                            <p><strong>City:</strong> <%= address.city %></p>
                            <p><strong>Landmark:</strong> <%= address.landMark %></p>
                            <p><strong>State:</strong> <%= address.state %></p>
                            <p><strong>Pincode:</strong> <%= address.pincode %></p>
                            <p><strong>Phone:</strong> <%= address.phone %></p>
                            <% if (address.altPhone) { %>
                                <p><strong>Alt. Phone:</strong> <%= address.altPhone %></p>
                            <% } %>
                            <div class="mt-3">
                                <a href="/editAddress?id=<%= address._id %>" class="btn btn-sm btn-primary">Edit</a>
                                <a href="/deleteAddress?id=<%= address._id %>" class="btn btn-sm btn-danger ml-2" onclick="return confirm('Are you sure you want to delete this address?')">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <p>You haven't added any addresses yet.</p>
    <% } %>

    <div class="mt-4">
        <a href="/addAddress" class="btn btn-success">Add New Address</a>
    </div>
</div>

<%- include("../../views/partials/user/footer") %>

