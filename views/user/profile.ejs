                                                        <% if (currentPage > 1) { %>
                                                            <li class="page-item">
                                                                <a class="page-link" href="?page=<%= currentPage - 1 %>#orders">Previous</a>
                                                            </li>
                                                        <% } %>
                                            
                                                        <% 
                                                            let startPage = Math.max(1, currentPage - 1);
                                                            let endPage = Math.min(totalPages, currentPage + 1);
                                            
                                                            if (currentPage === 1) {
                                                                endPage = Math.min(totalPages, startPage + 2);
                                                            } else if (currentPage === totalPages) {
                                                                startPage = Math.max(1, endPage - 2);
                                                            }
                                            
                                                            if (startPage > 1) { 
                                                        %>
                                                            <li class="page-item">
                                                                <a class="page-link" href="?page=1#orders">1</a>
                                                            </li>
                                                            <% if (startPage > 2) { %>
                                                                <li class="page-item disabled"><span class="page-link">...</span></li>
                                                            <% } %>
                                                        <% } %>
                                            
                                                        <% for (let i = startPage; i <= endPage; i++) { %>
                                                            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                                                <a class="page-link" href="?page=<%= i %>#orders"><%= i %></a>
                                                            </li>
                                                        <% } %>
                                            
                                                        <% if (endPage < totalPages) { %>
                                                            <% if (endPage < totalPages - 1) { %>
                                                                <li class="page-item disabled"><span class="page-link">...</span></li>
                                                            <% } %>
                                                            <li class="page-item">
                                                                <a class="page-link" href="?page=<%= totalPages %>#orders"><%= totalPages %></a>
                                                            </li>
                                                        <% } %>
                                            
                                                        <% if (currentPage < totalPages) { %>
                                                            <li class="page-item">
                                                                <a class="page-link" href="?page=<%= currentPage + 1 %>#orders">Next</a>
                                                            </li>
                                                        <% } %>
                                                    </ul>
                                                </nav>
                                            <% } %>
                                            
                                
                                        </div>
                                    </div>
                                </div>
                                

