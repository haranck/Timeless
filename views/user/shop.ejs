    <script>


        async function addToCart(productId) {
        try {
            const response = await fetch('/addToCart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    // If you're using CSRF protection, add the token here
                    // 'CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
                },
                body: JSON.stringify({
                    productId: productId,
                    quantity: 1
                })
            });
    
            const data = await response.json();
            
            if (response.ok) {
                // Show success message using SweetAlert2
                Swal.fire({
                    title: 'Success!',
                    text: 'Product added to cart successfully',
                    icon: 'success',
                    timer: 2000,
                    showConfirmButton: false
                }).then(() => {
                    // Optionally refresh the cart or update cart count
                    window.location.href = '/cart';
                });
            } else {
                throw new Error(data.message || 'Failed to add product to cart');
            }
        } catch (error) {
            console.error('Error:', error);
            Swal.fire({
                title: 'Error!',
                text: error.message || 'Failed to add product to cart',
                icon: 'error',
                confirmButtonText: 'OK'
            });
        }
    }
    

        document.getElementById("applyFilter").addEventListener("click", async () => {
            // Get selected categories
            const selectedCategories = Array.from(
                document.querySelectorAll(".filter-category:checked")
            ).map((checkbox) => checkbox.value);

            // Get selected price range
            const selectedPrice = document.querySelector(".filter-price:checked")
                ? document.querySelector(".filter-price:checked").value
                : null;

            // Get selected sizes
            const selectedSizes = Array.from(
                document.querySelectorAll(".filter-size:checked")
            ).map((checkbox) => checkbox.value);

            // Prepare filter data
            const filterData = {
                categories: selectedCategories,
                price: selectedPrice,
                sizes: selectedSizes,
            };

            // Send the filter data to the backend via AJAX
            try {
                const response = await fetch("/filter", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify(filterData),
                });

                // Get the filtered results
                const filteredProducts = await response.json();

                // Dynamically update the product list
                const productList = document.getElementById("product-list");
                productList.innerHTML = filteredProducts
                    .map(
                        (product) => `
                    <div class="product">
                        <h4>${product.name}</h4>
                        <p>${product.category}</p>
                        <p>${product.price}</p>
                    </div>
        `
                    )
                    .join("");
            } catch (error) {
                console.error("Error applying filters:", error);
            }
        });



    </script>

