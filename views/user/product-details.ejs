        $(document).ready(function () {
            // Create zoom elements
            const $zoomContainer = $('<div class="image-zoom-container"></div>').appendTo('body');
            const $zoomLens = $('<div class="zoom-lens"></div>');

            // Function to set up zoom for an image
            function setupZoom($image) {
                // Remove previous event handlers
                $image.off('mousemove mouseleave');

                // Add zoom lens to image container
                $image.closest('.product__details__pic__item').append($zoomLens);

                // Mouse move event
                $image.on('mousemove', function (e) {
                    const $this = $(this);
                    const offset = $this.offset();
                    const containerWidth = $this.width();
                    const containerHeight = $this.height();

                    // Calculate mouse position relative to image
                    const x = e.pageX - offset.left;
                    const y = e.pageY - offset.top;

                    // Show zoom elements
                    $zoomLens.show();
                    $zoomContainer.show();

                    // Position the lens
                    $zoomLens.css({
                        left: x - 50,
                        top: y - 50
                    });

                    // Calculate zoom background position
                    const percentX = (x / containerWidth) * 100;
                    const percentY = (y / containerHeight) * 100;

                    // Set zoom container background
                    $zoomContainer.css({
                        backgroundImage: `url(${$this.attr('src')})`,
                        backgroundPosition: `${percentX}% ${percentY}%`,
                        backgroundSize: `${$this.width() * 2}px ${$this.height() * 2}px`
                    });
                });

                // Mouse leave event
                $image.on('mouseleave', function () {
                    $zoomLens.hide();
                    $zoomContainer.hide();
                });
            }

            // Initial setup for first image
            $('.tab-pane.active img').each(function () {
                setupZoom($(this));
            });

            // Handle tab change events
            $('a[data-toggle="tab"]').on('shown.bs.tab', function () {
                // Find the image in the newly activated tab
                const $activeImage = $($(this).attr('href')).find('img');
                setupZoom($activeImage);
            });
        });

        document.addEventListener('DOMContentLoaded', calculateTotalPrice);

        async function updateItemQuantity(productId, action, value = null) {
            let quantityInput = event.target.parentElement.querySelector('.quantity-value');
            let currentQuantity = parseInt(quantityInput.value);
            let newQuantity = currentQuantity;
            newQuantity = action === 'increase' ? currentQuantity + 1 : currentQuantity - 1 ;
            if(newQuantity > 5){
                Swal.fire('Error!', 'You can only order up to 5 items.', 'error');
                return;
            }
            if(newQuantity < 1){
                Swal.fire('Error!', 'You can not order less than 1 item.', 'error'); 
                return;
            }
            const response = await fetch('/addToCart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    productId: productId,
                    quantity: action === 'increase' ? 1 : -1
                })
            } )
            const data = await response.json();
            if(!response.ok){
                Swal.fire('Error!', data.message, 'error');
                return;
            }
 
            await Swal.fire('Success!', '', 'success');

            if (newQuantity !== currentQuantity) {// If quantity changed
                quantityInput.value = newQuantity;
                
                // Update the price for this item
                const pricePerUnit = parseFloat(quantityInput.closest('tr').querySelector('.product__cart__item__text h5').textContent.replace('₹', ''));
                const totalPriceElement = quantityInput.closest('tr').querySelector('.cart__price');
                totalPriceElement.textContent = `₹${(pricePerUnit * newQuantity).toFixed(2)}`;

                // Recalculate total cart price
                calculateTotalPrice()            
            }
        }



    </script>

