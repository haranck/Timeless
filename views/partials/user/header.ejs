    <style>
        /* Dropdown container styling */
        /* Dropdown container */
        .dropdown {
            position: relative;
            display: inline-block;
            z-index: 10;
            /* Ensure the dropdown has a high stacking context */
        }

        /* Dropdown button/link */
        .dropdown-toggle {
            text-decoration: none;
            color: #333;
            font-weight: bold;
            cursor: pointer;
        }

        /* Dropdown content */
        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 150px;
            box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
            z-index: 1000;
            /* Higher z-index to ensure it is above other elements */
            border-radius: 5px;
            overflow: hidden;
            top: 100%;
            /* Position the dropdown below the button */
            left: 0;
            /* Align it to the left of the dropdown */
        }

        /* Dropdown links */
        .dropdown-content a {
            color: #333;
            padding: 10px 15px;
            text-decoration: none;
            display: block;
            font-size: 14px;
            transition: background-color 0.3s ease;
        }

        .dropdown-content a:hover {
            background-color: #f1f1f1;
        }

        /* Show dropdown content on hover */
        .dropdown:hover .dropdown-content {
            display: block;
        }

        /* Additional styling for user options */
        .sign-in-link {
            color: #333;
            font-size: 16px;
            text-decoration: none;
            margin-right: 10px;
        }

        .sign-in-link:hover {
            text-decoration: underline;
        }
    </style>
</head>

